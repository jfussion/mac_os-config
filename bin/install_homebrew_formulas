#! /usr/bin/env bash

# DESCRIPTION
# Installs Homebrew software.

# EXECUTION
# Homebrew
if ! command -v brew > /dev/null; then
  ruby -e "$(curl --location --fail --silent --show-error https://raw.githubusercontent.com/Homebrew/install/master/install)"
  export PATH="/usr/local/bin:$PATH"
  printf "export PATH=\"/usr/local/bin:$PATH\"\n" >> $HOME/.bash_profile
fi

# Readline
brew install readline

# OpenSSL
brew install openssl

# asciinema
brew install asciinema

# Bash
brew install bash

# Bash Completion
brew install bash-completion

# Bat
brew install bat

# Certbot
brew install certbot

# CTags
brew install ctags

# Git
brew install git

# GPG
brew install gnupg pinentry-mac

# GPG Agent
brew install gpg-agent

# Htop
brew install htop

# JSON CLI Parser
brew install jq

# Mac App Store CLI
brew install mas

# Mosh
brew install mosh

# Network Grep
brew install ngrep

# Redis
brew install redis

# tmux
brew install tmux
brew install reattach-to-user-namespace

# Tree
brew install tree

# Vim
brew install vim --with-luajit

# Watch
brew install watch

# Yank
brew install yank

# Yarn
brew install yarn

# YouTube Download
brew install youtube-dl

# PHP composer
brew install composer

# Mysql client
brew install mysql-client

# Restic
brew install restic

# Rclone
brew install rclone

# Node
brew install node

# Cmake
brew install cmake

# curl
brew install curl

# macvim
brew install macvim

# Go
brew install go

# Mysql
brew install mysql

# percona-toolkit
brew install percona-toolkit

# php
brew install php

# python
brew install python
brew install python@2

# wget
brew install wget

# zsh
brew install zsh
brew install zsh-completions

# dockerCompose
brew install docker-compose
brew install zsh-syntax-highlighting

# Intall ntfs-3g
brew cask install osxfuse
brew install ntfs-3g
